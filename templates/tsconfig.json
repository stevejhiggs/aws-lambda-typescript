{
  "compilerOptions": {
    "moduleResolution": "node",
    "target": "es2017",
    "module": "commonjs",
    "strict": true,
    "sourceMap": true,
    "skipLibCheck": true,
    "noUnusedLocals": true,
    "noImplicitAny": false,
    "esModuleInterop": true,
    "strictFunctionTypes": false,
    "strictPropertyInitialization": true,
    "strictNullChecks": true
  },
  "exclude": [
    "dist",
    "node_modules"
  ]
}
